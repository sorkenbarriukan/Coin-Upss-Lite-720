<tile>false</tile>
<size>1 1</size>
<pos>0 0</pos>
<origin>0 0</origin>
<path>./art/fondos/flatsys.png</path>
<zIndex>20</zIndex>
</image>
    
<image name="background3" extra="true">
<tile>false</tile>
